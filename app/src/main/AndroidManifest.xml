<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.shapewriter.android.softkeyboard" 
	android:sharedUserId="com.shapewriter.uid.shared" 
	android:versionName="ShapeWriter 3.0.8" android:versionCode="36">
	<uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WRITE_SETTINGS" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.READ_USER_DICTIONARY" />
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<provider android:name="SWI_LanguageProvider"
            android:authorities="com.shapewriter.android.softkeyboard.swi_languageprovider"
        />
        <provider android:name="SWI_SkinProvider"
            android:authorities="com.shapewriter.android.softkeyboard.swi_skinprovider"
        />
        <provider android:name="SWI_DatabaseManage"
			android:authorities="com.shapewriter.android.softkeyboard.swi_databasemanage"
			 />
		<service android:name="SWI_SoftkeyboardService"
			android:permission="android.permission.BIND_INPUT_METHOD">
			<intent-filter>
	 			<action android:name="android.view.InputMethod" />
			</intent-filter>
			<meta-data android:name="android.view.im" android:resource="@xml/method" />
		</service>

		<activity android:name="SWI_IMESettings" android:label="@string/shapewriter_ime_settings">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>
		<activity android:name="SWI_EditDatabase"
			android:label="User Dictionary Manager">
		</activity>
		<activity android:name="SWI_StartPage"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<activity android:name=".game.SWI_BalloonGameActivity"
					android:windowSoftInputMode="stateVisible">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>
		
		<activity android:name=".game.SWI_SubmitScoreActivity"
			android:theme="@android:style/Theme.Dialog">
		</activity>
        
		<activity android:name="SWI_CommandPage">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>
	</application>
</manifest>